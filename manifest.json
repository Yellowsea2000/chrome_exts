{
  "manifest_version": 2,
  "name": "使用自定义搜索",
  "version": "1.0",
  "description": "自定义你的快捷搜索新选项！",
  "browser_action": {
    "default_icon": {
      "19": "images/sb.png"
    }
  },
  "icons": {
    "16": "images/sb.png",
    "48": "images/sb.png",
    "128": "images/sb.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["js/jquery-1.8.3.js","js/content.js"]
    }
  ],
  "options_page": "options.html",
  "options_ui":
  {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "contextMenus"
  ]
}
