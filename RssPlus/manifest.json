{
    "manifest_version": 2,
    "name": "Rss订阅器Plus",
    "version": "1.0",
    "description": "万物皆可订阅！",
    "icons": {
        "16": "images/rss_button.png",
        "48": "images/rss_button.png",
        "128": "images/rss_button.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "images/rss_button.png",
            "38": "images/rss_button.png"
        },
        "default_title": "RssPlus",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "options_page": "options.html",
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "permissions": [
        "*://*/",
        "contextMenus",
        "storage",
        "tabs"
    ]
}