{
    "manifest_version": 2,
    "name": "显示系统信息demo",
    "version": "1.0",
    "description": "显示系统信息demo",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "browser_action": {
        "default_icon": {
            "19": "images/icon19.png",
            "38": "images/icon38.png"
        },
        "default_title": "系统信息",
        "default_popup": "popup.html"
    },
    "permissions": [
      "system.cpu",
      "system.memory",
      "system.storage"
    ]
}
